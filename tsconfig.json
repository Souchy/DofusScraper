{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    // "rootDir": "src",
    "outDir": "dist",
    "sourceMap": true,
    "resolveJsonModule": true,
    "lib": ["es6", "dom"],
    "esModuleInterop": true,

    "noImplicitAny": false,
    "declaration": false,
    "types": [
      "node",
      "jest"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "baseUrl": "src",
    "allowJs": true,
	"sourceRoot": "src"
  },
  "include": [
    "src/**/*.ts",
    "src/scrapers/pets.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
